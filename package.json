{
    "name": "thx-api",
    "version": "0.1.7",
    "description": "Public API for THX project",
    "repository": {
        "type": "git",
        "url": "https://github.com/peterpolman/thx-api"
    },
    "author": "Peter Polman",
    "license": "MIT",
    "scripts": {
        "start-prod": "npm run build && NODE_ENV=production node ./dist/server.js",
        "start-dev": "npm run build && NODE_ENV=development node ./dist/server.js",
        "serve": "npm run build && NODE_ENV=local node ./dist/server.js",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "build": "npm run build-ts",
        "build-ts": "tsc",
        "build-docs": "swagger-jsdoc -d ./src/swaggerDef.js -o ./src/swagger.json",
        "contracts:compile": "npm run compile:pool:abi; npm run compile:pool:bin; npm run compile:token:abi; npm run compile:token:bin",
        "compile:pool:abi": "solc @openzeppelin=$(pwd)/contracts/node_modules/@openzeppelin ./contracts/contracts/AssetPool.sol -o ./src/contracts --abi --overwrite --optimize",
        "compile:pool:bin": "solc @openzeppelin=$(pwd)/contracts/node_modules/@openzeppelin ./contracts/contracts/AssetPool.sol -o ./src/contracts --bin --overwrite --optimize ",
        "compile:token:abi": "solc @openzeppelin=$(pwd)/contracts/node_modules/@openzeppelin ./contracts/contracts/THXToken*.sol -o ./src/contracts --abi --overwrite --optimize",
        "compile:token:bin": "solc @openzeppelin=$(pwd)/contracts/node_modules/@openzeppelin ./contracts/contracts/THXToken*.sol -o ./src/contracts --bin --overwrite --optimize ",
        "watch-ts": "tsc -w",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "jest --forceExit --coverage --verbose ./test/*test.ts",
        "watch-test": "npm run test -- --watchAll",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "NODE_ENV=local nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "dependencies": {
        "@maticnetwork/maticjs": "^2.0.7",
        "@truffle/hdwallet-provider": "^1.1.0",
        "async": "^3.1.0",
        "axios": "^0.19.2",
        "bcrypt-nodejs": "^0.0.3",
        "bluebird": "^3.5.5",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "connect-mongo": "^3.0.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-flash": "0.0.2",
        "express-session": "^1.16.2",
        "express-validator": "^6.2.0",
        "fbgraph": "^1.4.4",
        "lodash": "^4.17.15",
        "loom-js": "^1.55.0",
        "lusca": "^1.6.1",
        "mongoose": "^5.7.5",
        "morgan": "^1.10.0",
        "nodemailer": "^6.3.0",
        "passport": "^0.4.0",
        "passport-facebook": "^3.0.0",
        "passport-local": "^1.0.0",
        "pug": "^2.0.4",
        "qrcode": "^1.4.4",
        "solc": "^0.7.1",
        "web3": "^1.2.7",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/async": "^3.0.2",
        "@types/bcrypt-nodejs": "^0.0.30",
        "@types/bluebird": "^3.5.27",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.3",
        "@types/compression": "^1.0.1",
        "@types/concurrently": "^4.1.0",
        "@types/connect-mongo": "^3.0.0",
        "@types/errorhandler": "^0.0.32",
        "@types/eslint": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/express-flash": "0.0.1",
        "@types/express-session": "^1.15.14",
        "@types/google-protobuf": "^3.7.2",
        "@types/jest": "^24.0.23",
        "@types/jquery": "^3.3.37",
        "@types/lodash": "^4.14.141",
        "@types/lusca": "^1.6.1",
        "@types/mongoose": "^5.5.18",
        "@types/node": "^12.7.8",
        "@types/node-sass": "^4.11.0",
        "@types/nodemailer": "^6.2.1",
        "@types/passport": "^1.0.1",
        "@types/passport-facebook": "^2.1.9",
        "@types/passport-local": "^1.0.33",
        "@types/pug": "^2.0.4",
        "@types/request": "^2.48.3",
        "@types/request-promise": "^4.1.44",
        "@types/retry": "^0.12.0",
        "@types/shelljs": "^0.8.5",
        "@types/supertest": "^2.0.8",
        "@types/web3": "^1.2.2",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^2.3.1",
        "@typescript-eslint/parser": "^2.3.1",
        "app-root-path": "^3.0.0",
        "chai": "^4.2.0",
        "concurrently": "^5.2.0",
        "eslint": "^6.4.0",
        "firebase": "^7.16.0",
        "jest": "^24.9.0",
        "node-sass": "^4.14.0",
        "nodemon": "^1.19.2",
        "shelljs": "^0.8.3",
        "supertest": "^4.0.2",
        "swagger-jsdoc": "^4.2.0",
        "swagger-ui-express": "^4.1.4",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.4.1",
        "typescript": "^3.6.3"
    }
}
