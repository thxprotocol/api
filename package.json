{
    "name": "@thxnetwork/api",
    "version": "1.0.13",
    "repository": {
        "type": "git",
        "url": "https://github.com/thxprotocol/api"
    },
    "author": "Peter Polman",
    "license": "AGPL-3.0",
    "scripts": {
        "preinstall": "npx npm-force-resolutions",
        "lint": "tsc -p ./tsconfig.json && eslint \"./src/**/*.ts\"",
        "lint:fix": "tsc -p ./tsconfig.json && eslint \"./src/**/*.ts\" --fix",
        "dev": "docker-compose up -d && npm run watch:debug",
        "build": "npm run build:sass && npm run build:assets && npm run build:docs && tsc -p ./tsconfig.json",
        "build:assets": "mkdir -p dist/src/public && cp -R src/public/* dist/src/public/. && cp -R src/views dist/src/.",
        "build:docs": "swagger-jsdoc -d ./src/swaggerDef.js -o ./src/swagger.json",
        "build:sass": "sass src/main.scss src/public/main.css",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch:sass\" \"npm run watch:node\"",
        "watch:debug": "concurrently -k -p \"[{name}]\" -n \"Sass,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch:sass\" \"npm run watch:node-debug\"",
        "watch:sass": "sass --watch src/main.scss src/public/main.css",
        "watch:node": "ts-node-dev -r tsconfig-paths/register src/server.ts",
        "watch:node-debug": "ts-node-dev -r tsconfig-paths/register --inspect=7000 src/server.ts",
        "test": "npx jest --runInBand",
        "test:coverage": "npx jest --coverage --runInBand",
        "test:debug": "npx jest --coverage --runInBand --detectOpenHandles",
        "migrate": "migrate-mongo up -f src/migrate-mongo-config.js",
        "migrate:create": "sh -c 'migrate-mongo create -f src/migrate-mongo-config.js $0'",
        "migrate:status": "migrate-mongo status -f src/migrate-mongo-config.js",
        "migrate:down": "migrate-mongo down -f src/migrate-mongo-config.js && npm run migrate:status"
    },
    "dependencies": {
        "@godaddy/terminus": "^4.9.0",
        "@sendgrid/mail": "^7.4.2",
        "@thxnetwork/artifacts": "^1.0.5",
        "agenda": "^4.2.1",
        "async": "^3.1.0",
        "axios": "^0.21.3",
        "bluebird": "^3.5.5",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "ejs": "^3.1.6",
        "ethers": "^5.4.7",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "express-jwt": "^6.1.0",
        "express-jwt-authz": "^2.4.1",
        "express-rate-limit": "^5.3.0",
        "express-validator": "^6.12.1",
        "googleapis": "^92.0.0",
        "jsonwebtoken": "^8.5.1",
        "jwks-rsa": "^1.12.0",
        "lusca": "^1.6.1",
        "migrate-mongo": "^8.2.3",
        "mongoose": "^6.2.1",
        "morgan": "^1.10.0",
        "morgan-json": "^1.1.0",
        "newrelic": "^8.7.1",
        "qrcode": "^1.5.0",
        "swagger-ui-express": "^4.3.0",
        "tsconfig-paths": "^3.12.0",
        "web3": "^1.7.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/async": "^3.0.2",
        "@types/bluebird": "^3.5.27",
        "@types/compression": "^1.0.1",
        "@types/concurrently": "^4.1.0",
        "@types/ejs": "^3.1.0",
        "@types/eslint": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/express-rate-limit": "^5.1.3",
        "@types/jest": "^27.1.2",
        "@types/lusca": "^1.6.1",
        "@types/newrelic": "^7.0.3",
        "@types/node": "^12.20.42",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "bootstrap": "^4.6.0",
        "concurrently": "^7.0.0",
        "eslint": "^8.6.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.1.2",
        "nock": "^13.2.2",
        "nodemon": "^2.0.15",
        "npm-force-resolutions": "0.0.10",
        "prettier": "^2.5.1",
        "sass": "^1.32.8",
        "shelljs": "^0.8.5",
        "supertest": "^6.2.1",
        "swagger-jsdoc": "^4.2.0",
        "ts-jest": "^27.1.2",
        "ts-node": "^10.5.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.5.5"
    },
    "resolutions": {
        "color-string": "1.5.5",
        "normalize-url": "4.5.1",
        "ws": "7.4.6",
        "tar": "4.4.18",
        "apollo-server": "2.25.3"
    },
    "engines": {
        "npm": ">=8.0.0",
        "node": ">=16.0.0"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "bracketSpacing": true,
        "printWidth": 120,
        "trailingComma": "all",
        "quoteProps": "consistent"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "root": true,
        "env": {
            "node": true,
            "mocha": true,
            "shelljs": true,
            "jest": true,
            "es6": true,
            "amd": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:prettier/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 2021,
            "sourceType": "module"
        },
        "rules": {
            "semi": [
                "error",
                "always"
            ],
            "quotes": [
                "error",
                "single"
            ],
            "no-debugger": "off",
            "no-sparse-arrays": "off",
            "@typescript-eslint/explicit-function-return-type": "off",
            "@typescript-eslint/no-unused-vars": "warn",
            "@typescript-eslint/camelcase": "off",
            "@typescript-eslint/no-explicit-any": "off",
            "@typescript-eslint/interface-name-prefix": "off"
        },
        "ignorePatterns": [
            "test/**/*.{j,t}s?(x)",
            "dist/*",
            "src/types/",
            "contracts/**/*.{j,t}s?(x)",
            "./**/*.d.ts",
            "./node_modules",
            "./node_modules/agenda/**/*.d.ts"
        ],
        "overrides": [
            {
                "files": [
                    "**/__tests__/*.{j,t}s?(x)",
                    "**/tests/unit/**/*.spec.{j,t}s?(x)"
                ],
                "env": {
                    "mocha": true
                }
            }
        ]
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.json"
            }
        },
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testMatch": [
            "<rootDir>/src/controllers/**/*.test.(ts|js)"
        ],
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "<rootDir>/src/util/jest/setup.ts"
        ],
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        }
    },
    "nodemonConfig": {
        "execMap": {
            "js": "TS_NODE_BASEURL=./dist node -r tsconfig-paths/register"
        }
    }
}
