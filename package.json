{
    "name": "@thxnetwork/api",
    "version": "1.15.2",
    "repository": {
        "type": "git",
        "url": "https://github.com/thxprotocol/api"
    },
    "author": "Peter Polman",
    "license": "AGPL-3.0",
    "scripts": {
        "lint": "tsc && eslint \"./src/**/*.ts\"",
        "lint:fix": "tsc && eslint \"./src/**/*.ts\" --fix",
        "dev": "docker-compose up -d && npm run watch:node",
        "exec": "ts-node-dev -r tsconfig-paths/register ",
        "build": "tsc",
        "start": "npm run watch:node",
        "watch:node": "ts-node-dev --ignore-watch openapi.json -r tsconfig-paths/register src/server.ts",
        "watch:node-debug": "ts-node-dev --ignore-watch openapi.json -r tsconfig-paths/register --inspect=7000 src/server.ts",
        "test": "npx jest --runInBand",
        "test:coverage": "npx jest --coverage --runInBand",
        "test:debug": "npx jest --coverage --runInBand --detectOpenHandles",
        "migrate": "npm run migrate:db; npm run migrate:contracts",
        "migrate:contracts": "node -r tsconfig-paths/register ./scripts/upgradeContractsToLatest.js",
        "migrate:db": "migrate-mongo up -f src/migrate-mongo-config.js",
        "migrate:create": "sh -c 'migrate-mongo create -f src/migrate-mongo-config.js $0'",
        "migrate:status": "migrate-mongo status -f src/migrate-mongo-config.js",
        "migrate:down": "migrate-mongo down -f src/migrate-mongo-config.js && npm run migrate:status"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.100.0",
        "@aws-sdk/s3-request-presigner": "^3.100.0",
        "@godaddy/terminus": "^4.9.0",
        "@sendgrid/mail": "^7.6.2",
        "@thxnetwork/artifacts": "^3.1.21",
        "agenda": "^4.2.1",
        "axios": "^0.21.3",
        "axios-better-stacktrace": "^2.1.2",
        "bluebird": "^3.5.5",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "ethers": "^5.4.7",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "express-jwt": "^7.7.5",
        "express-jwt-permissions": "^1.3.6",
        "express-rate-limit": "^5.3.0",
        "express-validator": "^6.12.1",
        "got": "^11.8.5",
        "jsonwebtoken": "^8.5.1",
        "jwks-rsa": "^2.1.4",
        "lusca": "^1.6.1",
        "migrate-mongo": "^8.2.3",
        "mongoose": "^6.2.1",
        "morgan": "^1.10.0",
        "morgan-json": "^1.1.0",
        "multer": "^1.4.5-lts.1",
        "newrelic": "^8.14.1",
        "qrcode": "^1.5.0",
        "semver": "^7.3.5",
        "short-uuid": "^4.2.0",
        "swagger-autogen": "^2.21.1",
        "swagger-jsdoc": "^6.2.1",
        "swagger-ui-express": "^4.3.0",
        "tsconfig-paths": "^3.12.0",
        "web3": "^1.7.3",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.27",
        "@types/compression": "^1.0.1",
        "@types/eslint": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/express-rate-limit": "^5.1.3",
        "@types/jest": "^27.1.2",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/lusca": "^1.6.1",
        "@types/multer": "^1.4.7",
        "@types/newrelic": "^7.0.3",
        "@types/node": "^12.20.42",
        "@types/semver": "^7.3.9",
        "@types/supertest": "^2.0.8",
        "@types/swagger-jsdoc": "^6.0.1",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "eslint": "^8.6.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.1.2",
        "nock": "^13.2.2",
        "prettier": "^2.5.1",
        "supertest": "^6.2.1",
        "ts-jest": "^27.1.2",
        "ts-node": "^10.5.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.5.5"
    },
    "engines": {
        "npm": ">=8.0.0",
        "node": ">=16.0.0"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "bracketSpacing": true,
        "printWidth": 120,
        "trailingComma": "all",
        "quoteProps": "consistent"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "root": true,
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:prettier/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 2021,
            "sourceType": "module"
        },
        "rules": {
            "semi": [
                "error",
                "always"
            ],
            "quotes": [
                "error",
                "single"
            ],
            "no-debugger": "off",
            "no-sparse-arrays": "off",
            "@typescript-eslint/explicit-function-return-type": "off",
            "@typescript-eslint/no-unused-vars": "warn",
            "@typescript-eslint/camelcase": "off",
            "@typescript-eslint/no-explicit-any": "off",
            "@typescript-eslint/interface-name-prefix": "off"
        },
        "ignorePatterns": [
            "./**/*.d.ts"
        ]
    },
    "jest": {
        "slowTestThreshold": 30,
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.json"
            }
        },
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testMatch": [
            "<rootDir>/src/**/*.test.(ts|js)"
        ],
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "<rootDir>/src/util/jest/setup.ts"
        ],
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        }
    }
}
