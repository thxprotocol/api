<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="UTF-8">
    <title>THX | Login</title>
    <meta name="viewport"
          content="width=device-width,initial-scale=1,shrink-to-fit=no,user-scalable=no,maximum-scale=1">
    <link rel="stylesheet" href="/main.css">
    <link rel="apple-touch-icon" sizes="180x180" href="/img/icons/apple-touch-icon.png?v=pgdmXmoa2w">
    <link rel="icon" type="image/png" sizes="32x32" href="/img/icons/favicon-32x32.png?v=pgdmXmoa2w">
    <link rel="icon" type="image/png" sizes="16x16" href="/img/icons/favicon-16x16.png?v=pgdmXmoa2w">
    <link rel="manifest" href="/site.webmanifest?v=pgdmXmoa2w">
    <link rel="mask-icon" href="/img/icons/safari-pinned-tab.svg?v=pgdmXmoa2w" color="#5bbad5">
    <link rel="shortcut icon" href="/img/icons/favicon.ico?v=pgdmXmoa2w">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
</head>

<body class="d-flex w-100 h-100 bg-light align-items-center justify-content-center">
    <div class="container">
        <div class="row pt-sm-5 pb-sm-5">
            <div class="col-lg-6 offset-lg-3 order-0 order-sm-1">
                <div class="card shadow-lg mb-5">
                    <div class="card-body p-sm-5">
                        <form autocomplete="off" action="/interaction/<%= uid %>/login" method="post">
                            <% if (alert && alert.message) { %>
                                <div class="alert alert-<%= alert.variant %>">
                                    <%= alert.message %>
                                </div>

                                <% } %>
                                    <% if (params.authentication_token) { %>
                                        <h1 class="h3 text-center mb-3">
                                            <strong>Set a password</strong>
                                        </h1>
                                        <div class="form-group">
                                            <label>Password:</label>
                                            <input class="form-control" autocomplete="off" required type="password"
                                                   name="password">
                                        </div>
                                        <div class="form-group">
                                            <label>Password again:</label>
                                            <input class="form-control" autocomplete="off" required type="password"
                                                   name="passwordConfirm">
                                        </div>
                                        <input type="hidden" name="authenticationToken"
                                               value="<%= params.authentication_token %>" />
                                        <input type="hidden" name="secureKey" value="<%= params.secure_key %>" />
                                        <hr>
                                        <button type="submit"
                                                class="btn btn-rounded btn-primary btn-block">Login</button>
                                        <% } else if (params.signup_token) { %>
                                            <a href="<%= dashboardUrl %>" class="btn btn-rounded btn-primary btn-block">
                                                Go to login
                                            </a>
                                            <% } else { %>
                                                <h1 class="h3 text-center mb-3">
                                                    <strong>Login to THX</strong>
                                                </h1>
                                                <div class="form-group">
                                                    <label>E-mail:</label>
                                                    <input class="form-control" required type="email" name="email">
                                                </div>
                                                <div class="form-group">
                                                    <label>Password:</label>
                                                    <input class="form-control" required type="password"
                                                           name="password">
                                                </div>
                                                <hr>
                                                <button type="submit"
                                                        class="btn btn-rounded btn-primary btn-block">Login</button>
                                                <% } %>

                        </form>
                        <a class="btn btn-block btn-link" href="/interaction/<%= uid %>/abort">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        (function (w, d, s, l, i) {
            w[l] = w[l] || [];
            w[l].push({
                'gtm.start': new Date().getTime(),
                'event': 'gtm.js',
            });
            const f = d.getElementsByTagName(s)[0],
                j = d.createElement(s),
                dl = l != 'dataLayer' ? '&l=' + l : '';
            j.async = true;
            j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
            f.parentNode.insertBefore(j, f);
        })(window, document, 'script', 'dataLayer', "<%= gtm %>");
    </script>
</body>

</html>